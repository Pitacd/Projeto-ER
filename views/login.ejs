<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if(error) { %>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <% } %>
    <link rel="stylesheet" href="/public/styles/myStyles.css">
    <title>Login</title>
</head>
<body>
    <div id="contentBox">
        <div id="LoginImageTitle">
            <img src="../public/images/bus-school.png">
            <p id="pLogin">Login</p>
        </div>
        <form method="post" id="formToLogin">
            <br>
            <label>
                Email acad√©mico
                <input type="email" name="email" required>
            </label>
            <label>
                Palavra-passe
                <input type="password" name="password" required>
            </label>
            <div id="divLoginBtns">
                <button type="submit" id="btnSendFormLogin" name="sendFormLogin">Acessar</button>
                <a href="/register"><button type="button">Registar</button></a>  
            </div>
        </form>
    </div>
    <% if(error) { %>
        <script>
            Swal.fire({
                title: '<%= error %>',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        </script>
    <% } %>
</body>
</html>