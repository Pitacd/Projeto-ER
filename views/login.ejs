<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/styles/myStyles.css">
    <title>Login</title>
</head>
<body>
    <div id="contentBox">
        <div id="LoginImageTitle">
            <img src="../public/images/bus-school.png">
            <p id="pLogin">Login</p>
        </div>
        <form method="post" id="formToLogin">
            <br>
            <label>
                Email académico
                <input type="email" name="email" required>
            </label>
            <label>
                Palavra-passe
                <input type="password" name="password" required>
            </label>
            <div id="divLoginBtns">
                <button type="submit" id="btnSendFormLogin" name="sendFormLogin">Acessar</button>
                <a href="/register"><button type="button">Registar</button></a>  
            </div>
        </form>
    </div>
    <script>
        if (error) { 
            Swal.fire({
                title: 'Conta não está registado',
                text: 'Verifique se introduziu corretamente os campos',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        } 
    </script>
</body>
</html>